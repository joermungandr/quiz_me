<h1>New answer</h1>

<%= form_for(@answer) do |f| %>
        <div>
          <%= f.label :description, ("Beschreibung") %><br>
          <%= f.text_area  :description  %>
        </div>
        <div>
          <%= f.label :right_answer, ("Richtige Anwort?: ") %><%= f.check_box :right_answer %> 
        </div>
        <div>
          <%= f.label :feedback, ("Feedback?: ") %><br>
          <%= f.text_area  :feedback  %>
        </div>
        <br>
        <div>
          <%= f.submit "Antwort anlegen", class: "btn btn-large btn-primary" %>
        </div>
 <% end %>

<%= link_to 'Back', answers_path %>
